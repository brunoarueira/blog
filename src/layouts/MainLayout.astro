---
import 'prism-themes/themes/prism-nord.css';
import 'prismjs/plugins/line-numbers/prism-line-numbers.css';

import { getImage } from 'astro:assets';
import faviconSrc from '../images/favicon.png';

import '../styles/globals.css';
import '../styles/code.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const appleTouchIcon = await getImage({
  src: faviconSrc,
  width: 180,
  height: 180,
  format: 'png'
});

const { title, full, frontmatter } = Astro.props;

const contentClasses = full ? "md:mx-3 md:my-8 w-full md:m-auto mx-1" : "mx-3 my-8 w-11/12 md:m-auto md:w-2/4";
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <link rel="icon" href="/favicon.ico" sizes="32x32" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="apple-touch-icon" href={appleTouchIcon.src} />
    <link rel="manifest" href="/manifest.json" />
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro&display=swap" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>{title || frontmatter.title}</title>
  </head>
  <body>
    <div class="w-full h-1 bg-gold-900" />

    <Header />

    <div class={contentClasses}>
      <slot />
    </div>

    <Footer />
  </body>
</html>
